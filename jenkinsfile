pipeline {
    agent any
    stages {
        stage('compile and clean') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('test') {
            steps {
                sh 'mvn test'
            }
	    post { 
              always { 
                junit allowEmptyResults: true, testResults: 'target/surefire-reports/*.xml'
              }
           }
        }
	
        stage('Deploy') {
            steps {
                sh 'mvn package'
            }
        }
	stage('Archiving') {
            steps {
                archiveArtifacts '**/target/*.jar'
            }
        }
    }
}
